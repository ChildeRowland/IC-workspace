<h3>
	Index page for the Units
</h3>

<%= link_to "Add a Unit", new_unit_path %>

<table>
	<thead>
		<tr>
			<th>
				Image
			</th>
			<th>
				Unit Type
			</th>
			<th>
				Order ID
			</th>
			<th>
				Vendor
			</th>
			<th>
				Manufacturer
			</th>
			<th>
				Product ID
			</th>
			<th>
				Nickname
			</th>
			<th>
				Finish
			</th>
			<th>
				Description
			</th>
			<th>
				Notes
			</th>
			<th>
				Product Type
			</th>
			<th>
				Last Updated
			</th>
			<th>
				Full Detail
			</th>
		</tr>
	</thead>
	<% @units.each do |u| %>
		<tbody>
			<tr>
				<td class="unit-pic">
					<%= content_tag :a, :href => "#{u.img}" do -%>
						<%= tag :img, :src => "#{u.img}" %>
					<% end -%>
				</td>
				<td>
					<%= u.type_of %><br>
				</td>
				<td>
					<%= u.order_identifier %><br>
				</td>
				<td>
					<%= u.vendor %><br>
				</td>
				<td>
					<%= u.mfg %><br>
				</td>
				<td>
					<%= u.product_identifier %><br>
				</td>
				<td>
					<%= u.nickname %><br>
				</td>
				<td>
					<%= u.finish %>
				</td>
				<td>
					<%= u.description %><br>
				</td>
				<td>
					<%= u.notes %><br>
				</td>
				<td>
					<%= u.product_type %><br>
				</td>
				<td>
					<%= time_ago_in_words(u.updated_at) %><br>
				</td>
				<td>
					<%= link_to "view", unit_path(u.id) %>
				</td>
			</tr>
		</tbody>
	<% end %>
</table>