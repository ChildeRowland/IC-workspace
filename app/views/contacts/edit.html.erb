<% if @contact.errors.any? %>
	<div class="validation-messages">
		<ul>
			<% @contact.errors.each do | field, msg| %>
				<li><%= msg %></li><br>
   			<% end %>
   		</ul>
   	</div>
<% end %>

<h3>
	<%= "Edit Contact at #{@retrofit_job.store_number} #{@retrofit_job.mall_name}" %>
</h3>

<p>
	Items in red must be completed.
</p>

<div class="all-forms">
	<%= form_for([@retrofit_job, @contact], method: :patch) do |f| %>
		<%= f.label "job title", {:class => "no-blank"} %>
		<%= f.text_field :title %>
		<%= f.label "first name" %>
		<%= f.text_field :fname %>
		<%= f.label "last name" %>
		<%= f.text_field :lname %>
		<%= f.label "email" %>
		<%= f.text_field :email, placeholder: "leave blank if n/a" %>
		<%= f.label "notes" %>
		<%= f.text_area :notes %>

		<div class="multi-input">

			<%= f.submit "update contact", :class => "submit-button submit" %>
		</div>
	<% end %>
</div>
		

	<%= button_to "cancel", retrofit_job_path(params[:retrofit_job_id]), method: :get, :class => "submit-button cancel" %>

	<%= button_to 'remove contact', retrofit_job_contact_path, method: :delete, :class => "submit-button delete", data: {confirm: "You are about to remove #{@contact.fname} from store #{@retrofit_job.store_number}, continue?"} %>




