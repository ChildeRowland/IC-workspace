<h3>
	<%= "#{@retrofit_job.store_number} #{@retrofit_job.mall_name} Project Page" %>
</h3>

<div class="store-box">
	<h4>
		Store Information
	</h4>
	<p>
		phone number: 
		<br>
		<%= @retrofit_job.phone %>
	</p>
	<p>
		Store Hours:
		<br>
		<%= simple_format(@retrofit_job.hours) %>
	</p>
	<p>
		Site Visit:
		<br>
		<%= "#{@retrofit_job.start.strftime("%B, %d %Y")} through #{@retrofit_job.finish.strftime("%B, %d %Y")}" %>
	</p>
	<%= button_to "Edit Store", edit_retrofit_job_path, method: :get, :class => "edit-form" %>
</div>

<div class="store-box contacts">
	<h4>
		Store Contacts
	</h4>

	<%= button_to "Add", new_retrofit_job_contact_path(@retrofit_job), :class => "add-button", :method => :get %>

	<ul>
		<% @retrofit_job.contacts.each do |c| %>
		<li>
			<ul class ="contact-box">
				<li><%= "#{c.title}:" %></li>
				 <li><%= "#{c.fname} #{c.lname}" %></li>
				<li><%= c.email %></li>
				<li class="notes" ><%= simple_format(c.notes) %></li>
				<li><%= button_to "edit contact", edit_retrofit_job_contact_path(@retrofit_job, c.id), :method => :get, :class => "edit-form" %></li>
			</ul>
		</li>
		<% end %>
	</ul>
</div>



<div class="store-box">
	<h4>
		IC Crew
	</h4>
	<% @retrofit_job.crews.each do |c| %>
		<%= Asset.find(c.asset_id).fname %>
		<%= Asset.find(c.asset_id).lname %><br>
	<% end %>
</div>

<div>
	<%= form_for([@retrofit_job, @crew], :url => retrofit_job_crews_path(@crew), method: :create) do |f| %>
	<%= f.label "Asset Name" %>
	<%= f.select(:asset_id, @assets.all.collect {|a| [a.lname, a.id]}) %>
	<%= f.submit "add to crew" %>
	<% end %>
</div>

<%= @crew.id %>
<%= @retrofit_job.id %>




