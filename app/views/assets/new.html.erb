<% if @asset.errors.any? %>
	<div class="validation-messages">
		<ul>
			<% @asset.errors.each do | field, msg| %>
				<li><%= msg %></li><br>
   			<% end %>
   		</ul>
   	</div>
<% end %>

<h3>
	New Asset Page
</h3>

<p>
	Items in red must be completed.
</p>

<div class="all-forms">
	<%= form_for(@asset, method: :post) do |f| %>
		<%= f.label "first name", {:class => "no-blank"} %>
		<%= f.text_field :fname %>
		<%= f.label "middle name" %>
		<%= f.text_field :mname %>
		<%= f.label "last name" %>
		<%= f.text_field :lname %>
		<%= f.label "DOB" %>
		<%= f.date_field :dob, placeholder: "mm/dd/yyyy" %>
		<%= f.label "phone number" %>
		<%= f.text_field :phone %>
		<%= f.label "email" %>
		<%= f.text_field :email %>

		<%= f.fields_for :address do |a| %>
			<%= a.label "line one" %>
			<%= a.text_field :line_one %>
			<%= a.label"line two" %>
			<%= a.text_field :line_two %>
			<%= a.label "city" %>
			<%= a.text_field :city %>
			<%= a.label "state" %>
			<%= a.text_field :state, placeholder: "two letter state code" %>
			<%= a.label "zip code" %>
			<%= a.text_field :zip, placeholder: "five digit code" %>
		<% end %>

		<%= f.label "Rate/Role" %>
		<%= f.text_field :rate %>

		<div class="multi-input">
			
			<%= f.submit :submit, {:class => "submit-button submit"} %>
		</div>
	<% end %>
</div>

	<%= button_to "cancel", assets_path, method: :get, :class => "submit-button cancel" %>

